<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
    name="com.surgesoftware.aem.llm.core.servlets.ComponentGeneratorServlet"
    immediate="true"
    enabled="true">
    
    <implementation class="com.surgesoftware.aem.llm.core.servlets.ComponentGeneratorServlet" />
    
    <service>
        <provide interface="javax.servlet.Servlet" />
    </service>
    
    <property name="service.vendor" value="SURGE Software Solutions Private Limited" />
    <property name="service.description" value="SURGE AEM LLM Connector - Component Generator Servlet" />
    <property name="sling.servlet.paths" value="/bin/surge/llm/generate" />
    <property name="sling.servlet.methods">
        <array>
            <value>GET</value>
            <value>POST</value>
        </array>
    </property>
    <property name="sling.auth.requirements" value="-/bin/surge/llm/generate" />
    <property name="service.ranking" type="Integer" value="1000" />
    
    <reference name="openAIService" 
               interface="com.surgesoftware.aem.llm.core.services.OpenAIService"
               cardinality="1..1" 
               policy="static"
               bind="setOpenAIService" />
    
</scr:component> 